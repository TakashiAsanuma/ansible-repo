{
  "variables": {
          "ansible_host": "centos"
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos:latest",
      "run_command": ["--privileged", "-d", "-i", "-t", "{{.Image}}", "/sbin/init"],
      "export_path": "controller.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "yum -y update",
        "yum -y install epel-release",
        "yum -y --enablerepo=epel install ansible"
      ]
    }, {
      "type": "ansible-local",
      "playbook_file": "appservers.yml",
      "inventory_file": "inventories/packer/hosts",
      "role_paths": ["roles"]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "takashiasanuma/centos",
      "tag": "centos_latest_app_server_{{timestamp}}"
    }
  ]
}
